# Environment Variables Template
# Copy this file to .env.dev or .env.prod and fill in your actual values

# Database Configuration
# Split vars are used by docker-compose; apps should prefer POSTGRES_URL.
POSTGRES_DB=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_PORT=
POSTGRES_USER=
POSTGRES_SSL=

# Preferred single connection string (apps read this)
# Example (host=localhost for local, host=postgres inside compose):
POSTGRES_URL=

# Redis Configuration
REDIS_PORT=6379
REDIS_HOST=

# Redis Connection URL
REDIS_URL=

# API Keys
API_KEY=
SECRET_KEY=

# Application Settings
DEBUG=
LOG_LEVEL=
ENVIRONMENT=

# Go API Service Settings
API_HOST=
API_PORT=

# Docker Configuration
DOCKER_TAG=
API_DOCKER_IMAGE=
WORKERS_DOCKER_IMAGE=

# Build Metadata (set by Makefile)
VERSION=
COMMIT=
DATE=

# Config version
CONFIG_VERSION=

# Git commit information, these will be generated runing "make git-env" command, 
# See the README.md file for mor information
GIT_COMMIT_HASH=
GIT_COMMIT_FULL=
GIT_COMMIT_DATE=
GIT_COMMIT_DATE_SHORT=
GIT_COMMIT_MESSAGE=
GIT_BRANCH=
GIT_TAG=
GIT_DIRTY=
BUILD_TIMESTAMP=